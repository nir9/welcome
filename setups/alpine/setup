#!/bin/sh

# Man
apk add man-db man-db-doc
# Sudo
apk add sudo
# Sway Man Pages
apk add sway-doc
# Vim
apk add vim
# Git
apk add git
# Foot Man Pages (The default Sway terminal)
apk add foot-doc
# Krita (Graphics Editor)
apk add krita
# Audacity (Audio Editor)
apk add audacity
# Kdenlive (Video Editor)
apk add kdenlive
# Stellarium (Virtual Planetarium)
apk add stellarium
# OBS Studio (Screen Recording)
apk add obs-studio
# Wlrobs (Add support for OBS screen recording of wlroots-based compositors, such as Sway)
apk add wlrobs
# MPV (CLI based Media Player)
apk add mpv
# Mutt (Terminal Email Client)
apk add mutt mutt-doc
# Sway Background (Fix blank background)
apk add swaybg
# OpenSSH Client (Adds commands like ssh-keygen for example)
apk add openssh-client
# QEMU with GTK UI (PC Emulator)
apk add qemu-system-x86_64 qemu-doc qemu-ui-gtk
# QEMU img utility
apk add qemu-img
# 7zip
apk add 7zip
